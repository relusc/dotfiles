{
  "workbench.startupEditor": "newUntitledFile",
  "explorer.confirmDelete": false,
  "go.formatTool": "goimports",
  "editor.scrollBeyondLastLine": false,
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  "markdownlint.run": "onSave",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.suggestSelection": "first",
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "[dockerfile]": {
    "editor.quickSuggestions": {
      "strings": true
    }
  },
  "files.associations": {
    "*.go": "go",
    "*.tfvars": "terraform",
    "*.hcl": "terraform",
    ".gcloudignore": "ignore",
    ".*rc": "plaintext",
    "CODEOWNERS": "plaintext"
  },
  "go.toolsManagement.autoUpdate": true,
  "go.alternateTools": {
    "go": "/opt/homebrew/bin/go"
  },
  "redhat.telemetry.enabled": false,
  "vs-kubernetes": {
    "vscode-kubernetes.kubectl-path.mac": "/opt/homebrew/bin/kubectl",
    "vscode-kubernetes.helm-path.mac": "/opt/homebrew/bin/helm",
    "vs-kubernetes.crd-code-completion": "disabled",
    "vs-kubernetes.ignore-recommendations": true
  },
  "files.insertFinalNewline": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "prettier.singleQuote": true,
  "yaml.format.enable": false,
  "terraform.languageServer.terraform.path": "/opt/homebrew/bin/terraform",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "shellcheck.executablePath": "/opt/homebrew/bin/shellcheck",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terraform.languageServer.enable": true,
  "terraform.languageServer.indexing.ignoreDirectoryNames": [".git", "gitops"],
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[python]": {
    "editor.formatOnType": true
  },
  "editor.formatOnSave": true,
  "git.openRepositoryInParentFolders": "never"
}
